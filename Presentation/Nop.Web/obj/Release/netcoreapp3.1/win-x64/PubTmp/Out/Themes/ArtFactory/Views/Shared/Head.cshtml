@using Nop.Core;

@inject IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;

    var userAgent = Url.ActionContext.HttpContext.Request.Headers["User-Agent"];
    var isIeEightOrLess = false;
    if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().ToLower().IndexOf("MSIE 8.0", StringComparison.InvariantCultureIgnoreCase) > 0)
    {
        isIeEightOrLess = true;
    }
    if (isIeEightOrLess)
    {
        if (supportRtl)
        {
            Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/ie8-fix.rtl.css");
        }
        else {
            Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/ie8-fix.css");
            Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/selectivizr.min.js");
            Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/respond.min.js");
        }
    }

    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");
    
    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/forum.rtl.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/1024.rtl.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/tables.rtl.css");
    }
    else {
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/forum.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/1280.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/1024.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/mobile-only.css");
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/tables.css");
    }

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/ArtFactory/Content/css/styles.css");
    }

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");

    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/ArtFactory/Content/scripts/ArtFactory.js");
}