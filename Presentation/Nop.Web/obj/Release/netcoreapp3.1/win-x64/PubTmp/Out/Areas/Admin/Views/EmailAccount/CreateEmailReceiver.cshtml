@model EmailReceiverModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.EmailReceivers.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Email receivers");
}

<form asp-controller="EmailAccount" asp-action="CreateEmailReceiver" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.EmailReceivers.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="EmailReceiversList">@T("Admin.Configuration.EmailReceivers.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.EmailAccountDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateEmailReceiver", Model)
</form>