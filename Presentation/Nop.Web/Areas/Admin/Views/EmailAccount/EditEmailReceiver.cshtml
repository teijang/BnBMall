@model EmailReceiverModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.EmailReceivers.Edit").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Email receivers");
}

<form asp-controller="EmailAccount" asp-action="EditEmailReceiver" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.EmailReceivers.Edit")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="EmailReceiversList">@T("Admin.Configuration.EmailReceivers.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>            
            <span id="emailReceiver-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateEmailReceiver", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="emailReceiver-delete" asp-action="DeleteEmailReceiver"/>
